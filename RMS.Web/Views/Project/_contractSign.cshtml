@model  RMS.Web.Models.ViewModel.ProjectViewModel
@{
    Layout = null;
}
<style>
    .rr {
        background: #97507E !important;
    }
</style>
<div class="col-md-2 col-sm-2 col-xs-2"></div>
<div class="col-md-6 col-sm-6 col-xs-6">
    <div class="panel panel-warning">
        <div class="panel-heading rr" style="color: white;text-align: center">Contract Sign</div>
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-12 col-lg-12">
                    <div class="form-group">
                        <label class="col-sm-4 col-md-4 col-lg-4">Reference :</label>
                        <div class="col-md-5">
                            @Html.DisplayTextFor(x => x.ContractSign.Reference)
                        </div>
                        <div class="col-md-3">
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 col-lg-12">
                    <div class="form-group">
                        <label class="col-sm-4 col-md-4 col-lg-4">Send Name :</label>
                        <div class="col-md-5">
                            @Html.DisplayTextFor(x => x.ContractSign.SendName)
                        </div>
                        <div class="col-md-3">
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 col-lg-12">
                    <div class="form-group">
                        <label class="col-sm-4 col-md-4 col-lg-4">Send Date :</label>
                        <div class="col-md-5">
                            @Html.TextBoxFor(x => x.ContractSign.SendDate, "{0:dd-MMM-yyyy}", new { @class = "my-style", @readonly = true })
                          
                        </div>
                        <div class="col-md-3">
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 col-lg-12">
                    <div class="form-group">
                        <label class="col-sm-4 col-md-4 col-lg-4">File :</label>
                        @if (Model.ContractSign != null && Model.ContractSign.FilePath != null)
                        {
                            <div class="col-md-5">
                                <a href="@Url.Action("Show", "Demand", new { url = Model.ContractSign.FilePath })" style="" target="_blank"><img src="~/Content/icons/32x32/pdf.png" /></a>
                            </div>
                        }
                        else
                        {
                            <div class="col-md-5">
                            </div>
                        }

                        <div class="col-md-3">

                        </div>

                    </div>
                </div>
                <div class="col-sm-12 col-lg-12">
                    <div class="form-group">
                        <label class="col-sm-4 col-md-4 col-lg-4">Remarks :</label>
                        <div class="col-md-5">
                            @Html.DisplayTextFor(x => x.ContractSign.Remarks)
                        </div>
                        <div class="col-md-3">
                        </div>
                    </div>
                </div>
                

            </div>
        </div>
    </div>
</div>



