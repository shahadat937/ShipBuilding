@using RMS.Utility
@model RMS.Web.Models.ViewModel.DemandViewModel
@{
    //ViewBag.Title = "Commitee Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="panel panel-primary">
        <div class="panel-heading" style="text-align:center;">
           @Model.ProjectNotes.First().Demand.FileNo
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-12">
                    <div class="col-md-12">

                        @if (Model.SuccessMessage != null)
                        {
                            <div style="color:green;text-align: center">@Model.SuccessMessage</div>
                        }
                        else
                        {
                            <div style="color: red; text-align: center">@Model.FailedMessage</div>
                        }

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 col-lg-12">
                    <p style="color:green">@TempData["message"]</p>
                </div>
            </div>
        </div>
        @{ int rowNo = 0; }
        <div class="">

            <table class="table table-bordered table-hover table-striped">


                <tr style="background-color: #654FA1;color: white">
                    <td style="text-align: center; font-size: 15px">Serial No</td>
                    <td style="text-align: center; font-size: 15px">Project Description</td>
                    <td style="text-align: center; font-size: 15px">Complete</td>
                    <td style="text-align: center; font-size: 15px">Remarks</td>

                </tr>

                @foreach (var item in Model.ProjectNotes)
                {
                    <tr>
                        <td style="" class="col-md-1">@(rowNo += 1)</td>
                       
                        <td style="" class="col-md-6">@item.Parameter</td>
                        <td style="" class="col-md-5">@item.Complete</td>
                        <td style="" class="col-md-5">@item.Value</td>
                 

                    </tr>
                }
            </table>
        </div>

    </div>
</div>


