                        <div class="col-sm-12 col-lg-12">
                            <div class="form-group">
                                <label class="col-sm-3 col-md-3 col-lg-3">Is Approve </label>
                                <div class="col-md-5" >
                                    @Html.CheckBoxFor(x => x.CommitteeRaiseLetter.IsApprove, new { id = "approvBtn" })

                                </div>
                                <div class="col-md-4">@Html.ValidationMessageFor(x => x.CommitteeRaiseLetter.IsApprove)</div>
                            </div>
                        </div>
                    </div>

                <div class="row approvDoc" style="display: none">
                    <div class="col-sm-12 col-lg-12">
                        <div class="form-group">
                            <label class="col-sm-3 col-md-3 col-lg-3">Approve Document</label>
                            <div class="col-md-5">
                                <input type="file" id="document" name="upload" class="form-control" />
                            
                            </div>
                            <div class="col-md-4">@Html.ValidationMessageFor(x => x.ApproveDocument)</div>
                        </div>
                    </div>
                </div>*@     
                    <div class="row">
                        <div class="col-sm-12 col-lg-12">
                            <div class="form-group">
                                <div class="col-md-8">
                                    <a href="@Url.Action("Index", "CommitteeRaiseLetters", new { formId = Model.FormId,flowserial = Model.FlowSerial, proId = Model.CommitteeRaiseLetter.FileNo })" class="btn btn-info">
                                        Show Data
                                        <span class="glyphicon glyphicon-hand-up" aria-hidden="true"></span>
                                    </a>
                                    @*@Html.ActionLink("Back To List", "Index", "CommitteeRaiseLetters", null, new { formId = Model.FormId,proId = Model.CommitteeRaiseLetter.FileNo, @class = "btn btn-info" })*@
                                    <input type="submit" id="btnCreateCommitteeRaiseLetter" class="btn btn-info pull-right" value="Create" />
                                </div>
                            </div>
                        </div>
                    </div>
          
                    <div class="col-md-2">
                        <div class="modal fade" id="mySuccessModel" role="dialog" tabindex="-1" data-keyboard="false" data-backdrop="static">
                            <div class="modal-dialog modal-sm">
                                <div class="modal-content">
                                    <div class="modal-body">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        <h4 class="modal-title" id="SuccessMessage" style="color:green">Committee Raise Letter Created Successfully!</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal fade" id="myFailedModel" role="dialog" tabindex="-1" data-keyboard="false" data-backdrop="static">
                        <div class="modal-dialog modal-sm">
                            <div class="modal-content">
                                <div class="modal-body">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title" id="FailedMessage" style="color:red">Committee Raise Letter Creation Failed!</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $('#btnCreateCommitteeRaiseLetter').unbind('click').bind('click', function () {
            var form = $('#formCreateCommitteeRaiseLetter');
            if (jQuery.validator && jQuery.validator.unobtrusive) {
                form.validate();
                if (!form.valid()) {
                    return false;
                }
                else {
                    var data = form.serialize();
                    $.ajax({
                        url: "/CommitteeRaiseLetters/Create",
                        type: 'POST',
                        data: data,
                        dataType: "html",
                        success: successFunc,
                        error: errorFunc
                    });
                    successFunc = function (response) {
                        $('#mySuccessModel').modal('show');
                    }
                    errorFunc = function (response) {
                        $('#myFailedModel').modal('show');
                    }
                }
            }
        });
        $(function () {
            $("#approvBtn").click(function () {
                if ($(this).is(':checked')) {
                    $(".approvDoc").show();
                }
                else {
                    $(".approvDoc").hide();
                }
            });
        });
        $(document).ready(function () {
            if ($("#approvBtn").is(':checked')) {
                $(".approvDoc").show();
            }
            else {
                $(".approvDoc").hide();
            }
        });
    </script>
}