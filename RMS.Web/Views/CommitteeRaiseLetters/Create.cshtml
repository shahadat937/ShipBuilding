                                <div class="col-md-5">
                                    @Html.DropDownListFor(x => x.CommitteeRaiseLetter.FileNo, Model.ProjectSelectListItems, "--Select--", new {  @class = "txtMember form-control", required = "required",@readonly =true })

                                    
