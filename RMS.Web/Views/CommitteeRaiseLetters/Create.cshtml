                                <div class="col-md-4">
                                    @Html.ValidationMessageFor(x => x.CommitteeRaiseLetter.AttachedDocument)
                                </div>
                            </div>
                        </div>
                    </div>
            
                  
                       <div class="row">
                        <div class="col-sm-12 col-lg-12">
                            <div class="form-group">
                                <label class="col-sm-3 col-md-3 col-lg-3">From  &nbsp;<i class=" fa fa-asterisk" style="font-size:9px;color:red;position:absolute;" aria-hidden="true"></i></label>
                                <div class="col-md-5">
                                    @Html.TextBoxFor(x => x.CommitteeRaiseLetter.FromAuthority, null, new { id = "txtName", @class = "txtMember form-control", required = "required" })
                                </div>
                                <div class="col-md-4">
                                    @Html.ValidationMessageFor(x => x.CommitteeRaiseLetter.FromAuthority)
                                </div>

                            </div>
                        </div>
                    </div>
                  
