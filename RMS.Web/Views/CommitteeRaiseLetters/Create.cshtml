                                </div>
                                <div class="col-md-4">
                                    @Html.ValidationMessageFor(x => x.CommitteeRaiseLetter.FileNo)
                                </div>

                            </div>
                        </div>
                    </div>
                     <div class="row">
                        <div class="col-sm-12 col-lg-12">
                            <div class="form-group">
                                <label class="col-sm-3 col-md-3 col-lg-3">Type Value &nbsp;<i class=" fa fa-asterisk" style="font-size:9px;color:red;position:absolute;" aria-hidden="true"></i></label>
                                <div class="col-md-5">
                                    @Html.DropDownListFor(x => x.CommitteeRaiseLetter.CommonCodeTypeValueId, Model.CommonCodeTypeValues, "--Select--", new { id = "fileNo", @class = "txtMember form-control", required = "required" })
                                </div>
                                <div class="col-md-4">
                                    @Html.ValidationMessageFor(x => x.CommitteeRaiseLetter.CommonCodeTypeValueId)
                                </div>
                            </div>
                        </div>
                    </div>
                      <div class="row">
                        <div class="col-sm-12 col-lg-12">
                            <div class="form-group">
                                <label class="col-sm-3 col-md-3 col-lg-3">Issue Date &nbsp;<i class=" fa fa-asterisk" style="font-size:9px;color:red;position:absolute;" aria-hidden="true"></i></label>
                                <div class="col-md-4">
                                    @Html.TextBoxFor(x => x.CommitteeRaiseLetter.IssueDate, "{0:dd MMMM yyyy}", new { id = "txtStartDate", @class = "datepicker form-control", required = "required" })
                                    @Html.ValidationMessageFor(x => x.CommitteeRaiseLetter.IssueDate)
                                </div>

                            </div>
                        </div>
                    </div>
                      <div class="row">
                        <div class="col-sm-12 col-lg-12">
                            <div class="form-group">
                                <label class="col-sm-3 col-md-3 col-lg-3">Attached Document </label>
                                <div class="col-md-5">
                                    <input type="file" id="file" name="upload" class="form-control" />
                                    @*@Html.TextBoxFor(x => x.TenderSpecification.TenderUrl, null, new { id = "txtFileName", @class = "form-control", required = "required" })*@
