        $('#depId').change(function () {
            var da = $('#depId').val();
            $.ajax({
                type: "Get",
                url: "/TenderSpecDeptOpinions/GetFileName",

                data: { fileNo: $('#fileNo').val(), formId: $('#formIdentity').val(), depId: da },
                datatype: "json",
                traditional: true,
                success: function (data) {
                    
                    if (data.FileURL.length > 0) {
                        var url = '/CommitteeRaiseLetters/Show?url=' + data.FileURL;
                        $("#surDoc").prop("href", url);
                        $(".curDoc").show();
                        $("#Fname").html(data.FileName);
