@model RMS.Model.SetPassword

@{
    ViewBag.Title = "Log in Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h5>Change Password</h5>
        </div>
        <div class="body">
            @using (Html.BeginForm("UpdatePassword", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "LoginClass form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="form-group">
                    @Html.Label("New Password", new { @class = "control-label col-md-4" })<i class="fa fa-asterisk" style="font-size:9px;color:red;position:absolute;" aria-hidden="true"></i>
                    <div class="col-md-8">
                        @Html.PasswordFor(x => x.NewPassword, new { @class = "form-control ", tabindex = 2, placeholder = "Enter New Password" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Confirm Password", new { @class = "control-label col-md-4" })<i class="fa fa-asterisk" style="font-size:9px;color:red;position:absolute;" aria-hidden="true"></i>
                    <div class="col-md-8">
                        @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control ", tabindex = 2, placeholder = "Enter Confirm Password" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-4 col-md-8">
                        <button id="btnUpdate" class=" btn btn-primary ">Change Password</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

